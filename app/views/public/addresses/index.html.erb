<div class="container">
  <%= render 'layouts/public_header_template' %>

  <div class="row">
    <h1>Public::Addresses#index</h1>

    <div class="col-md-10">
      <div class="field">
        <%= form_with model: @address, url: addresses_path do |f| %>
          <div class="form-group">
            <%= f.label :name, "宛名" %>
            <%= f.text_field :name, class: "form-control"%>
          </div>

          <div class="form-group">
            <%= f.label :postal_code, "郵便番号" %>
            <%= f.text_field :postal_code, class: "form-control"%>
          </div>

          <div class="form-group">
            <%= f.label :address, "配送先" %>
            <%= f.text_field :address, class: "form-control"%>
          </div>

          <div class="form-group">
            <%= f.submit "Create", class: "btn btn-success" %>
          </div>

        <% end %>
      </div>


      <% @addresses.each do |address| %>
      <table class="table">
        <thead>
          <tr>
            <th>宛名</th>
            <th>郵便番号</th>
            <th>配送先</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= address.name %></td>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td>
              <%= link_to "edit", edit_address_path(address.id), class: "btn btn-success" %>
            </td>
          </tr>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>
