<!--public/items/show-->
<body>
  <%= render 'layouts/public_header_template' %>
  <main>
    <div class="container">
      <div class="row">
        <div class="col-2">
          <%= render 'layouts/genre_search', genres: @genres %>
        </div>
        <div class="col-6">
          <div>
            <%= image_tag @item.get_image(500, 500) %>
          </div>
        </div>

        <div class="col-4">
          <h3 class="mb-5"><%= @item.name %></h3>
          <p><%= @item.introduction %></p>
          <p>¥ <%= @item.price %>(税込)</p>
          <div class="field">
            <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
              <div class="form-group">
                <%= f.hidden_field :item_id, value: @item.id %>
              </div>
              <div class="form-inline">
                <%= f.select :amount, *[1..10], {include_blank: '選択してください'} %>
                <%= f.submit "カートに入れる", class: "btn btn-success ml-3" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </main>
  <%= render 'layouts/footer_template' %>
</body>