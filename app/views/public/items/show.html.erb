<!--public/items/show-->
<body>
  <%= render 'layouts/public_header_template' %>
  <main>
    <div class="container">
      <div class="row">
        <h1 class="mb-5"><%= @item.name %></h1>
      </div>
      <div class="row">
        <div class="col-6">
          <div>
            <%= image_tag @item.get_image(500, 500) %>
          </div>
        </div>

        <div class="col-6">
          <p>introduction：<%= @item.introduction %></p>
          <p>価格（税抜）：<%= @item.price %></p>
          <div class="field">
            <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
              <div class="form-group">
                <%= f.hidden_field :item_id, value: @item.id %>
              </div>
              <div class="form-group">
                <%= f.label :amount, "数量" %>
                <%= f.select :amount, *[1..10] %>
              </div>
              <div class="form-action">
                <%= f.submit "カートに入れる", class: "btn btn-success w-50" %>
              </div>
            <% end %>
          </div>
        </div>
      <div class="row">
        <%= link_to "index", items_path, class: "ml-auto mt-5 btn btn-success" %>
      </div>
    </div>
  </main>
  <%= render 'layouts/footer_template' %>
</body>