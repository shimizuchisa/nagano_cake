<body>
<%= render 'layouts/public_header_template' %>
<main>
<div class="container">
  <h1 class="mb-5">Cart</h1>
  <div class="row">
    <div class="col-md-10">
      <div class="col-3 ml-auto mb-3">
        <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class: "btn btn-danger mx-auto" %>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td>
            <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>

              <!--f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>      -->
              <%= f.select :amount, *[1..10], {selected: cart_item.amount} %>
              <!--%= f.hidden_field :item_id, value: cart_item.item_id %>-->
              <%= f.submit "数量変更", class: "btn btn-success" %>

            <% end %>
            </td>
            <td><%= cart_item.subtotal %></td>
            <td><%= link_to "削除", cart_item_path(cart_item.id), method: :delete, class: "btn btn-success" %></td>
            <td><% @total_price += cart_item.subtotal %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="col-3 ml-auto mt-3">
        <div class="ml-auto d-flex mt-3">
          <p class="lead fs-1 fw-bold d-inline-flex mr-2">合計金額：</p>
          <p class="lead fs-6 fw-bold d-inline-flex"><%= @total_price %> 円</p>
        </div>
        <%= link_to "注文画面へ移動", new_order_path, class: "btn btn-info mx-auto mt-3" %>
      </div>


    </div>
  </div>
</div>
</main>

 <%= render 'layouts/footer_template' %>

</body>
