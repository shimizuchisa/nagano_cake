<body>
  <%= render 'layouts/public_header_template' %>
  <main>
    <div class="container">
      <h1 class="mb-5">注文履歴詳細</h1>
      <div class="row mt-5">
        <div class="col-7">
          <h3 class="">注文情報</h3>
          <table class="table mt-3">
            <tbody>
              <tr>
                <td>注文日</td>
                <td><%= @order.created_at %></td>
              </tr>
              <tr>
                <td>配送先</td>
                <td>
                  〒<%= @order.postal_code %><br>
                  <%= @order.address %><br>
                  <%= @order.name %>
                </td>
              </tr>
              <tr>
                <td>支払方法</td>
                <td><%= @order.payment_method_i18n %></td>
              </tr>
              <tr>
                <td>ステータス</td>
                <td><%= @order.order_status_i18n %></td>
              </tr>
            </tbody>
          </table>
        </div>


        <div class="offset-1 col-4">
          <h3 class="">請求情報</h3>
          <table class="table mt-3">
            <tbody>
              <tr>
                <td>商品合計</td>
                <td><%= @total.to_s(:delimited) %></td>
              </tr>
              <tr>
                <td>配送料</td>
                <td><%= @order.shipping_cost.to_s(:delimited) %></td>
              </tr>
              <tr>
                <td>ご請求額</td>
                <td>
                  <%= @order.grand_total.to_s(:delimited) %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <div class="row mt-5">
        <div class="col-7">
          <h3>注文内容</h3>
          <table class="table">
            <thead class="table-light">
              <tr>
                <th>商品</th>
                <th>単価(税込)</th>
                <th>個数</th>
                <th>小計</th>
              </tr>
            </thead>
            <tbody>
              <% @order_items.each do |order_item| %>
              <tr>
                <td><%= order_item.item.name %>：</td>
                <td><%= order_item.item.with_tax_price.to_s(:delimited) %> 円（税込）</td>
                <td><%= order_item.amount %> 個</td>
                <td><%= (order_item.amount * order_item.item.with_tax_price).to_s(:delimited) %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

    </div>
  </main>
  <%= render 'layouts/footer_template' %>
</body>