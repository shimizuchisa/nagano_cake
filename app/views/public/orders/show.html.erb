<body>
  <%= render 'layouts/public_header_template' %>
  <main>
    <div class="container">
      <div class="row">
        <div class="col-3 ml-auto">
          <%= link_to "ご注文一覧", orders_path, class: "btn btn-light btn-block" %>
        </div>
      </div>
      <h1 class="mb-5">ご注文内容</h1>
      <div class="row">
        <div class="col-10">
          <table class="table mb-3">
            <tbody>
              <tr>
                <td>ご注文番号</td>
                <td><%= @order.id %></td>
              </tr>
              <tr>
                <td>ご注文日時</td>
                <td><%= @order.created_at %></td>
              </tr>
              <tr>
                <td>宛名</td>
                <td><%= @order.name %></td>
              </tr>
              <tr>
                <td>お届け先郵便番号</td>
                <td><%= @order.postal_code %></td>
              </tr>
              <tr>
                <td>お届け先住所</td>
                <td><%= @order.address %></td>
              </tr>
              <tr>
                <td>ご請求金額</td>
                <td>
                  <%= @order.grand_total %> 円（送料込み）</td>
              </tr>
              <tr>
                <td>お支払い方法</td>
                <td><%= @order.payment_method %></td>
              </tr>
              <tr>
                <td>ステータス</td>
                <td><%= @order.order_status %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <div class="row mt-5">
        <div class="col-4">
          <h3>ご注文商品一覧</h3>
          <table class="table">
            <tbody>
              <% @order_items.each do |order_item| %>
              <tr>
                <td><%= order_item.item.name %>：</td>
                <td><%= order_item.amount %> 個</td>
                <td><%= order_item.item.price %> 円（税込）</td>
                <td><%= order_item.itemsubtotal %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

    </div>
  </main>
  <%= render 'layouts/footer_template' %>
</body>