<body>
  <%= render 'layouts/public_header_template' %>
  <main>
    <div class="container">
      <h1>マイページ</h1>
      <div class="row">
        <div class="col-md-10 d-flex">
          <h3 class="col-2 mt-3 mr-3">登録情報</h3>
          <div class="mt-3 d-inline">
            <%= link_to "編集する", customers_my_page_edit_path, class: "btn btn-success" %>
          </div>
        </div>
        <div class="col-md-10 mt-5">
          <table class="table">
            <tbody>
              <tr>
                <td>氏名</td>
                <td><%= @customer.last_name %> <%= @customer.first_name %></td>
              </tr>
              <tr>
                <td>カナ</td>
                <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
              </tr>
              <tr>
                <td>郵便番号</td>
                <td><%= @customer.postal_code %></td>
              </tr>
              <tr>
                <td>住所</td>
                <td><%= @customer.address %></td>
              </tr>
              <tr>
                <td>電話番号</td>
                <td><%= @customer.telephone_number %></td>
              </tr>
              <tr>
                <td>メールアドレス</td>
                <td><%= @customer.email %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <div class="row mt-5">
        <div class="col-2">
          <h3 class="mr-3">配送先</h3>
        </div>
        <div>
          <%= link_to "一覧を見る", addresses_path, class: "btn btn-primary" %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col-2">
          <h3 class="mr-3">注文履歴</h3>
        </div>
        <div>
          <%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %>
        </div>
      </div>

    </div>
  </main>
  <%= render 'layouts/footer_template' %>
</body>

