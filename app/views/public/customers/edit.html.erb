<!--nagano_cake public/customer/edit-->
<body>
  <main>
  <%= render 'layouts/public_header_template' %>
    <div class="container">
      <div class="row">
        <h1 class="mb-5">会員情報編集</h1>
        <div class="col-md-10">

          <div class="form-group">
            <%= form_with model: @customer, url: customers_my_page_path(@customer), method: :patch do |f| %>
            <div class="form-inline">
              <%= f.label :name, "氏名", class: "col-3 justify-content-start" %>
              <%= f.text_field :last_name, class: "form-control w-25 mr-2" %>
              <%= f.text_field :first_name, class: "form-control w-25" %>
            </div>

            <div class="form-inline mt-3">
              <%= f.label :name_kana, "フリカナ", class: "col-3 justify-content-start" %>
              <%= f.text_field :last_name_kana, class: "form-control w-25 mr-2" %>
              <%= f.text_field :first_name_kana, class: "form-control w-25" %>
            </div>

            <div class="form-inline mt-3">
              <%= f.label :postal_code, "郵便番号", class: "col-3 justify-content-start" %>
              <%= f.text_field :postal_code, class: "form-control w-25" %>
            </div>

            <div class="form-inline mt-3">
              <%= f.label :address, "住所", class: "col-3 justify-content-start" %>
              <%= f.text_area :address, class: "form-control w-50" %>
            </div>

            <div class="form-inline mt-3">
              <%= f.label :telephone_number, "電話番号", class: "col-3 justify-content-start" %>
              <%= f.text_field :telephone_number, class: "form-control w-25" %>
            </div>

            <div class="form-inline mt-3">
              <%= f.label :email, "メールアドレス", class: "col-3 justify-content-start" %>
              <%= f.email_field :email, class: "form-control w-50" %>
            </div>

            <div class="offset-3 form-inline mt-5">
              <%= f.submit "編集内容を保存", class: "btn btn-success" %>
            <% end %>
              <%= link_to "退会する", customers_confirm_path, class: "btn btn-danger offset-6" %>
            </div>

        </div>
      </div>
    </div>
  </main>
</body>
