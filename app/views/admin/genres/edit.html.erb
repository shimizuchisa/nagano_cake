<body>
  <%= render 'layouts/admin_header_template' %>
  <main>
    <div class="container">
      <h1>ジャンル編集</h1>
      <div class="row mt-5">
        <div class="col-10">
          <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
          <div class="form-group d-inline mr-5">
            <%= f.label :genre_name, "ジャンル名" %>
          </div>
          <div class="form-group d-inline mr-5">
            <%= f.text_field :genre_name, class: "form-conrol" %>
          </div>
          <div class="form-group d-inline">
            <%= f.submit "変更を保存", class: "btn btn-success btn-lg" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
  <%= render 'layouts/footer_template' %>
</body>
