<body>

<main>
  <h1>ジャンル一覧</h1>
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <%= form_with model: @genre, url: admin_genres_path do |f| %>
          <div class="form-group">
            <%= f.label :genre_name, "ジャンル名" %>
            <%= f.text_field :genre_name, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.submit "登録", class: "btn btn-success btn-sm" %>
          </div>
          <% end %>
        </div>

        <div class="col-md-8 offset-md-1">
          <table class="table">
            <tr>
              <th>ジャンルid</th>
              <th>ジャンル名</th>
            </tr>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.id %></td>
              <td><%= genre.genre_name %></td>
            </tr>
            <% end %>
          </table>
        </div>

      </div>
    </div>

</main>
</body>
