<body>
  <%= render 'layouts/admin_header_template'%>
  <main>
    <div class="container">
      <div class="row">
        <div class="col-3 ml-auto">
          <%= link_to "show", admin_item_path(@item.id), class: "btn btn-light" %>
        </div>
      </div>
      <h1 class="mb-5">商品更新</h1>
      <div class="row">
        <div class="col-10">
          <%= form_with model: @item, url: admin_item_path(@item), method: :patch do |f| %>
            <div class="form-group">
              <%= f.label :genre_id %><br>
              <%= f.collection_select :genre_id, Genre.all, :id, :genre_name, :prompt => true , class: "form-control"%>
            </div>

            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :image %><br>
              <%= f.file_field :image, accept: "image/*" %>
            </div>

            <div class="form-group">
              <%= f.label :introduction %>
              <%= f.text_area :introduction, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :price %>
              <%= f.text_field :price, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= f.label :is_active, "ステータス" %><br>
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active, "販売中", value: "true" %><br>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active, "休止中", value: "false" %>
            </div>

            <div class="form-group">
              <%= f.submit "Update item", class: "btn btn-success btn-sm" %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </main>
  <%= render 'layouts/footer_template' %>
</body>