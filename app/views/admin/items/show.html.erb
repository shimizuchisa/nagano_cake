<body>
  <%= render 'layouts/admin_header_template'%>
  <main>
    <div class="container">
      <div class="row">
        <h1 class="mb-5">
          <%= @item.genre.genre_name %>：<strong><%= @item.name %></strong>
        </h1>
      </div>
      <div class="row">
        <div class="col-6">
          <div>
            <%= image_tag @item.get_image(500, 500) %>
          </div>
        </div>

        <div class="col-6">
          <p class="mb-0">商品紹介：</p>
          <p class="mt-0"><%= @item.introduction %></p>
          <p>価格（税抜）：<%= @item.price %></p>
          <p>ステータス：
            <% if @item.is_active == true %>
              販売中
            <% else %>
              準備中
            <% end %>
          </p>
          <%= link_to "edit", edit_admin_item_path(@item.id), class: "btn btn-light btn-block" %>
        </div>
      </div>
    </div>
  </main>
  <%= render 'layouts/footer_template' %>
</body>