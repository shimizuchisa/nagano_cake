<!--admin/items/show-->
<h1>Admin::Items#Show</h1>

  <div class="container">
    <div class="row">
      <div class="col-md-11">
        <table class="table">
          <thead>
            <tr>
              <th>ジャンル</th>
              <th>商品名</th>
              <th>image</th>
              <th>introduction</th>
              <th>価格（税抜）</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @item.genre_id %></td>
              <td><%= @item.name %></td>
              <td><%= image_tag @item.get_image(100, 100) %></td>
              <td><%= @item.introduction %></td>
              <td><%= @item.price %></td>
              <td><%= @item.is_active %></td>
            </tr>
          </tbody>
        </table>

        <%= link_to "index", admin_items_path %>
        <%= link_to "edit", edit_admin_item_path(@item.id) %>
      </div>
    </div>
  </div>