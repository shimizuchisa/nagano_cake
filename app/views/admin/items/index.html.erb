<!--admin/items/index-->
<body>
  <%= render 'layouts/admin_header_template' %>
  <main>
    <div class="container">
      <h1 class="">商品一覧</h1>
      <div class="row">
        <div class="w-100 col-10 mx-auto align-items-center">
          <div class="col-1 ml-auto">
            <%= link_to(new_admin_item_path) do %>
              <!--<i class="fas fa-plus-circle"></i>-->
              <i class="fas fa-plus-circle fa-5x"></i>
            <% end %>
          </div>

          <div class="mt-2 mb-5">
            <table class="table table-bordered">
              <thead class="table-secondary">
                <tr>
                  <th>商品ID</th>
                  <th>商品名</th>
                  <th>税抜価格</th>
                  <th>ジャンル</th>
                  <th>ステータス</th>
                </tr>
              </thead>
              <tbody>
                <% @items.each do |item| %>
                <tr>
                  <td><%= item.id %></td>
                  <td>
                    <%= link_to(admin_item_path(item.id)) do %>
                      <%= item.name %>
                    <% end %>
                  </td>
                  <td><%= item.price.to_s(:delimited) %></td>
                  <td><%= item.genre.genre_name %></td>
                  <% if item.is_active == true %>
                    <td class="text-success fw-bold">販売中</td>
                  <% else %>
                    <td class="text-secondary">販売停止中</td>
                  <% end %>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

        <%= paginate @items %>
    </div>
  </main>
  <%= render 'layouts/footer_template' %>
</body>