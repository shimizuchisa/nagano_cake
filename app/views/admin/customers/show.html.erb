
  <%= render 'layouts/admin_header_template' %>
  <div class="container">
    <div class="row">
      <div class="col-md-10">
        <h1>Admin::Customers#show</h1>

        <table class="table">
          <tbody>
            <tr>
              <th>会員ID</th>
              <th><%= @customer.id %></th>
            </tr>
            <tr>
              <td>御名前</td>
              <td><%= @customer.last_name %> <%= @customer.first_name %></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= @customer.email %></td>
              </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= @customer.postal_code %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= @customer.address %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= @customer.telephone_number %></td>
            </tr>
            <tr>
              <td>退会</td>
              <td>
              <% if @customer.is_deleted == true %>
                <span>＊</span>
              <% end %>
              </td>
            </tr>
          </tbody>
        </table>

        <div>
        <%= link_to "Customer index", admin_customers_path %>
        </div>

        <div>
        <%= link_to "Customer edit", edit_admin_customer_path(@customer.id) %>
        </div>

        <h2 class="mt-5">注文履歴</h2>
        <table class="table">
          <thead>
            <tr>
              <th>注文ID</th>
              <th>注文ステータス</th>
              <th>更新日時</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>#</td>
              <td>#</td>
              <td>#</td>
            </tr>
          </tbody>
        </table>

      </div>
    </div>
  </div>
