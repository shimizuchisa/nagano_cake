<!--nagano_cake admin/customer/edit-->
<body>
  <main>
  <%= render 'layouts/admin_header_template' %>


<div class="container">
  <div class="row">
    <h1>顧客情報更新</h1>
    <div class="col-md-10">
      <div class="field">
        <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>

          <div class="form-group">
          <%= f.label :last_name, "姓" %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
          </div>

          <div class="form-group">
          <%= f.label :first_name, "名" %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
          </div>

          <div class="form-group">
          <%= f.label :last_name_kana, "姓カナ" %><br />
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form-control" %>
          </div>

          <div class="form-group">
          <%= f.label :first_name_kana, "名カナ" %><br />
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "form-control" %>
          </div>

          <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
          </div>

          <div class="form-group">
          <%= f.label :postal_code, "郵便番号" %><br />
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: "form-control" %>
          </div>

          <div class="form-group">
          <%= f.label :address, "住所" %><br />
          <%= f.text_area :address, autofocus: true, autocomplete: "address", class: "form-control" %>
          </div>

          <div class="form-group">
          <%= f.label :telephone_number, "電話番号" %><br />
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :is_deleted, "ステータス" %><br>
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, "有効会員", value: "false" %><br>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, "退会会員", value: "true" %>
          </div>

          <div class="form-group">
            <%= f.submit "Customer update", class: "btn btn-success btn-sm" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
</main>
 <%= render 'layouts/footer_template' %>
</body>
