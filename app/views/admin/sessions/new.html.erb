<body>
  <%= render 'layouts/public_header_template' %>
  <main>
    <div class="container">
      <h1 class="mb-5">管理者ログイン</h1>

      <div class="row">
        <div class="col-10">
            <%= form_with model: @admin, url: admin_session_path do |f| %>
              <div class="form-group form-inline">
                <%= f.label :email, "メールアドレス", class: "col-3 justify-content-start" %><br>
                <%= f.text_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com", class: "form-control w-50" %>
              </div>

              <div class="form-inline mt-3">
                <%= f.label :password, "パスワード", class: "col-3 justify-content-start" %><br>
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control w-50" %>
              </div>

              <!--<% if devise_mapping.rememberable? %>-->
                <!--<div class="field">-->
                  <!--<%= f.check_box :remember_me %>-->
                  <!--<%= f.label :remember_me %>-->
                <!--</div>-->
              <!--<% end %>-->

              <div class="form-actions mt-5 col-3 offset-3 ">
                <%= f.submit "ログイン", class: "btn btn-primary w-100" %>
              </div>
          <% end %>

            <%= render "admin/shared/links" %>
        </div>
      </div>
    </div>
  </main>
  <%= render 'layouts/footer_template' %>
</body>