<!--admin/orders/edit-->
<body>
  <%= render 'layouts/admin_header_template' %>
  <main>
    <div class="container">
      <h1>注文履歴詳細</h1>
      <div class="row">
        <div class="col-10">
          <table class="table mb-3">
            <tbody>
              <tr>
                <td>購入者</td>
                <td><%= @order.customer.last_name %><%= @order.customer.first_name %></td>
              </tr>
              <tr>
                <td>注文日</td>
                <td><%= @order.created_at %></td>
              </tr>
              <tr>
                <td>配送先</td>
                <td><%= @order.address_display %></td>
              </tr>
              <tr>
                <td>支払い方法</td>
                <td><%= @order.payment_method %></td>
              </tr>
              <tr>
                <td>注文ステータス</td>
                <td>
                  <%= form_with model: @order, url: admin_order_path(@order), method: :patch do |f| %>
                    <%= f.select :order_status, Order.order_statuses.keys %>
                    <%= f.submit "更新", class: "btn btn-success" %>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <h1 class="mt-5">注文商品一覧</h1>
      <div class="row">
        <div class="col-10">
            <table class="table">
              <thead>
                <tr>
                  <th>商品名</th>
                  <th>単価（税込）</th>
                  <th>数量</th>
                  <th>小計</th>
                  <th>制作ステータス</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% @order_items.each do |order_item| %>
                <tr>
                  <td><%= order_item.item.name %></td>
                  <td><%= (order_item.item.price * 1.1).floor %></td>
                  <td><%= order_item.amount %></td>
                  <td><%= (order_item.item.price * 1.1).floor * order_item.amount %></td>
                  <td>
                    <%= form_with model: order_item, url: admin_order_item_path(order_item), method: :patch do |f| %>
                      <%= f.select :making_status, OrderItem.making_statuses.keys %>
                  </td>
                  <td><%= f.submit "更新", class: "btn btn-success" %>
                    <% end %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
        </div>
      </div>
    </div>
  </main>
  <%= render 'layouts/footer_template' %>
</body>