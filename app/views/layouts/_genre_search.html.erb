<!-- @genres → genres -->
<table class="table table-bordered">
  <thead class="table-light">
    <tr>
      <th class="text-center">ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% genres.each do |genre| %>
    <tr>
      <td><%= link_to genre.genre_name, items_path(genre_id: genre.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>